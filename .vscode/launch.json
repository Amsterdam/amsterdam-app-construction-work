    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Test Current File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py", // Adjust the path to your manage.py file
            "args": [
                "test",
                "${relativeFile}",
                "--noinput"
            ],
            "django": true,
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            },
            "envFile": "${workspaceFolder}/env",
            "env": {
                "DEBUG": "true",
                "PYTHONPATH": "${workspaceFolder}",
                "DJANGO_SETTINGS_MODULE": "main_application.settings",
                "DJANGO_ALLOW_ASYNC_UNSAFE": "true"
            },
        }
    ]
}